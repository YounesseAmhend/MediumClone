<div class="min-h-screen flex-column flex justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl w-full space-y-8 bg-white p-8 rounded-xl shadow-md">
    <h1 class="text-center text-3xl font-extrabold text-gray-900">Create a New Blog</h1>

    {{ form_start(form, {'attr': {'class': 'mt-8 space-y-6'}}) }}

      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <label for="{{ form.title.vars.id }}" class="sr-only">Title</label>
          {{ form_widget(form.title, {
            'attr': {
              'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
              'placeholder': 'Blog Title'
            }
          }) }}
        </div>
        <div>
          <label for="{{ form.postCategory.vars.id }}" class="sr-only">Category</label>
          <div class="relative">
            {{ form_widget(form.postCategory, {
              'attr': {
                'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                'placeholder': 'Select Category'
              }
            }) }}
            <svg class="absolute right-3 top-1/2 transform -translate-y-1/2 h-5 w-5 text-gray-500 pointer-events-none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>
        <div>
          <label for="{{ form.content.vars.id }}" class="sr-only">Content</label>
          {{ form_widget(form.content, {
            'attr': {
              'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
              'placeholder': 'Blog Content',
              'rows': '5'
            }
          }) }}
        </div>
      </div>

      <div>
        <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
          <span class="absolute left-0 inset-y-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </span>
          {{ button_label|default('Create Blog') }}
        </button>
      </div>

    {{ form_end(form) }}
  </div>
</div>
